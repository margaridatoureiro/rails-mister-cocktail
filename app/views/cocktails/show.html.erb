<div class="existing-cocktail">

  <div class="cocktail">
    <h1> <%= @cocktail.name %> 🍹</h1>
    <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <%= cl_image_tag 'jmqamrcrshvknigw1nv5', height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <div class="ingredients">
    <h2>Ingredients</h2>
    <% if @cocktail.doses.empty? %>
      <h6>You have no ingredients on your cocktail, love (yet 😉)</h6>
    <% else %>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
        <li>
          <strong><%= dose.ingredient.name %></strong>
          &mdash; <%= dose.description %>
          (<%= link_to 'delete', dose_path(dose), method: :delete %>)
        </li>
        <% end %>
      </ul>
    <% end %>
    <div class="go-back">
      <%= link_to 'Go back', root_path, class: "button-cute" %>
    </div>
  </div>


  <div class="new-ingredient">
      <h2>Add a new ingredient</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit 'Spicy your drink with a new ingredient', class: "button-cute" %>
      <% end %>
  </div>
</div>


