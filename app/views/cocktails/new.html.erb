 <div class="col-6">
    <h2>Create new cocktail</h2>
    <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Introduce your magic potion to the world', class: "btn btn-outline-dark" %>
    <% end %>
    <%= link_to 'Back', root_path %>
  </div>

