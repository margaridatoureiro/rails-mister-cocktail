 <div class="mt-4">
    <div class="container-3 mt-4">
      <h2>Create New Cocktail🍹</h2>
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
        <div class="submit">
          <%= f.submit 'Introduce your magic potion to the world', class: "button-cute" %>
        </div>
        <% end %>
        <div class="back">
          <%= link_to 'Go back', root_path, class: "button-sweet"%>
        </div>
    </div>
  </div>


